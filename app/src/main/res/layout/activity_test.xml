<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:orientation="vertical"
    android:weightSum="4"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/main_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical"
        android:weightSum="4"
        android:visibility="visible">
        <EditText
            android:id="@+id/user_cholesterol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:textColor="@color/greyPrimary"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:hint="Cholesterol"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/user_bloodpressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:ems="10"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Blood Pressure"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_cholesterol" />

        <TextView
            android:id="@+id/text_treated_for_hbp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:text="Treated for Cholesterol"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_bloodpressure" />

        <RadioGroup
            android:id="@+id/user_treated_for_hbp"
            android:layout_gravity="center"
            android:layout_width="231dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_treated_for_hbp">


            <RadioButton
                android:id="@+id/user_treated_for_hbp_yes"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/user_treated_for_hbp_no"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"

                android:checked="true"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:id="@+id/text_diabetic"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:text="Diabetic"
            android:textAlignment="center"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_treated_for_hbp" />

        <RadioGroup
            android:id="@+id/user_diabetic"
            android:layout_gravity="center"
            android:layout_width="231dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_diabetic">


            <RadioButton
                android:id="@+id/user_diabetic_yes"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/user_diabetic_no"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"

                android:checked="true"
                android:text="No" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingTop="34dp">

            <Button
                android:id="@+id/enter_info_button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="Back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.92"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_diabetic"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/enter_info_button_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.92"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_diabetic"
                app:layout_constraintVertical_bias="0.0" />

     </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>